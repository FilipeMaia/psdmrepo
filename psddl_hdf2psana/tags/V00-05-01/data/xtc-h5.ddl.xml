<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE psddl SYSTEM "psddl.dtd">

<psddl>

    <use file="psddldata/xtc.ddl.xml" 
        cpp_headers="pdsdata/xtc/ClockTime.hh"/>

    <package name="Pds">

        <!-- ========================================================================= -->
    
        <h5schema name="ClockTime" version="0">

            <tag name="skip-proxy"/>
            <dataset name="data">

                <attribute type="uint32_t" name="nanoseconds"/>
                <attribute type="uint32_t" name="seconds"/>

            </dataset>
            
        </h5schema>
    
        <!-- ========================================================================= -->
    
        <h5schema name="DetInfo" version="0">

            <tag name="skip-proxy"/>
            <dataset name="data">
                <attribute type="uint32_t" name="log"/>
                <attribute type="uint32_t" name="phy"/>
            </dataset>
            
        </h5schema>
    
    
    </package>
</psddl>
