<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE psddl SYSTEM "psddl.dtd">

<psddl>

    <use file="psddldata/fli.ddl.xml" />

    <package name="Fli">

        <!-- ========================================================================= -->

        <h5schema name="ConfigV1" version="0">
            <dataset name="config">
                <attribute name="width"/>
                <attribute name="height"/>
                <attribute name="orgX"/>
                <attribute name="orgY"/>
                <attribute name="binX"/>
                <attribute name="binY"/>
                <attribute name="exposureTime"/>
                <attribute name="coolingTemp"/>
                <attribute name="gainIndex"/>
                <attribute name="readoutSpeedIndex"/>
                <attribute name="exposureEventCode"/>
                <attribute name="numDelayShots"/>
            </dataset>
        </h5schema>

        <!-- ========================================================================= -->
    
        <h5schema name="FrameV1" version="0">

            <dataset name="frame">
                <attribute name="shotIdStart"/>
                <attribute name="readoutTime"/>
                <attribute name="temperature"/>
            </dataset>
            
            <dataset name="data"/>
            
        </h5schema>
    
    </package>
</psddl>
