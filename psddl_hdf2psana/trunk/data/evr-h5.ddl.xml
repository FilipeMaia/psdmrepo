<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE psddl SYSTEM "psddl.dtd">

<psddl>

    <use file="psddldata/evr.ddl.xml" />
    
    <package name="EvrData">

        <!-- ========================================================================= -->
    
        <h5schema name="SequencerConfigV1" version="0">

            <dataset name="config">

                <attribute name="sync_source"/>
                <attribute name="beam_source"/>
                <attribute name="length"/>
                <attribute name="cycles"/>
                <attribute name="entries">
                  <tag name="vlen"/>
                </attribute>

            </dataset>
            
        </h5schema>
    
        <!-- ========================================================================= -->
    
        <h5schema name="DataV3" version="0">

            <dataset name="evrData">

                <attribute name="fifoEvents">
                    <tag name="vlen"/>
                </attribute>

            </dataset>
            
        </h5schema>
    
        <!-- ========================================================================= -->

        <h5schema name="EventCodeV5" version="0">

            <dataset name="data">
                <attribute name="code"/>
                <attribute name="isReadout"/>
                <attribute name="isCommand"/>
                <attribute name="isLatch"/>
                <attribute name="reportDelay"/>
                <attribute name="reportWidth"/>
                <attribute name="maskTrigger"/>
                <attribute name="maskSet"/>
                <attribute name="maskClear"/>
                <attribute name="desc" rank="1">
                    <tag name="vlen"/>
                </attribute>
            </dataset>

        </h5schema>

        <!-- ========================================================================= -->

        <h5schema name="EventCodeV6" version="0">
            <dataset name="data">
                <attribute name="code"/>
                <attribute name="isReadout"/>
                <attribute name="isCommand"/>
                <attribute name="isLatch"/>
                <attribute name="reportDelay"/>
                <attribute name="reportWidth"/>
                <attribute name="maskTrigger"/>
                <attribute name="maskSet"/>
                <attribute name="maskClear"/>
                <attribute name="desc" rank="1">
                    <tag name="vlen"/>
                </attribute>
                <attribute name="readoutGroup"/>
            </dataset>
        </h5schema>

        <!-- ========================================================================= -->
    
        <h5schema name="ConfigV5" version="0">

            <dataset name="config">
                <attribute name="neventcodes"/>
                <attribute name="npulses"/>
                <attribute name="noutputs"/>
            </dataset>

            <dataset name="eventcodes">
                <attribute name="eventcodes"/>
            </dataset>
            
            <dataset name="pulses">
                <attribute name="pulses"/>
            </dataset>
            
            <dataset name="output_maps">
                <attribute name="output_maps"/>
            </dataset>
            
            <dataset name="seq_config">
                <attribute name="seq_config"/>
            </dataset>
            
        </h5schema>
    
        <!-- ========================================================================= -->
    
        <h5schema name="ConfigV6" version="0">

            <dataset name="config">
                <attribute name="neventcodes"/>
                <attribute name="npulses"/>
                <attribute name="noutputs"/>
            </dataset>

            <dataset name="eventcodes">
                <attribute name="eventcodes"/>
            </dataset>
            
            <dataset name="pulses">
                <attribute name="pulses"/>
            </dataset>
            
            <dataset name="output_maps">
                <attribute name="output_maps"/>
            </dataset>
            
            <dataset name="seq_config">
                <attribute name="seq_config"/>
            </dataset>
            
        </h5schema>
    
        <!-- ========================================================================= -->
    
        <h5schema name="ConfigV7" version="0">

            <dataset name="config">
                <attribute name="neventcodes"/>
                <attribute name="npulses"/>
                <attribute name="noutputs"/>
            </dataset>

            <dataset name="eventcodes">
                <attribute name="eventcodes"/>
            </dataset>
            
            <dataset name="pulses">
                <attribute name="pulses"/>
            </dataset>
            
            <dataset name="output_maps">
                <attribute name="output_maps"/>
            </dataset>
            
            <dataset name="seq_config">
                <attribute name="seq_config"/>
            </dataset>
            
        </h5schema>
    
        <!-- ========================================================================= -->
    
        <h5schema name="IOChannel" version="0">

            <tag name="external" value="psddl_hdf2psana/evr.ddlm.h"/>
            
        </h5schema>
    
        <!-- ========================================================================= -->
    
        <h5schema name="IOConfigV1" version="0">

            <tag name="external" value="psddl_hdf2psana/evr.ddlm.h"/>
            
        </h5schema>
    
    </package>
</psddl>
