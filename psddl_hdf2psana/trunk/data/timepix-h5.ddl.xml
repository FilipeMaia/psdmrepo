<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE psddl SYSTEM "psddl.dtd">

<psddl>

    <use file="psddldata/timepix.ddl.xml" />

    <package name="Timepix">

        <!-- ========================================================================= -->
    
        <h5schema name="DataV1" version="0">

            <dataset name="data">
                <attribute name="timestamp"/>
                <attribute name="frameCounter"/>
                <attribute name="lostRows"/>
            </dataset>
            
            <dataset name="image" method="data">
            </dataset>
            
        </h5schema>
    
        <!-- ========================================================================= -->
    
        <h5schema name="DataV2" version="0">

            <dataset name="data">
                <attribute name="width"/>
                <attribute name="height"/>
                <attribute name="timestamp"/>
                <attribute name="frameCounter"/>
                <attribute name="lostRows"/>
            </dataset>
            
            <dataset name="image" method="data">
            </dataset>
            
        </h5schema>
    
    </package>
</psddl>
