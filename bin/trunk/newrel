#!/bin/sh
#
# $Id$
#
# Script for creation of the new software release
#

#
# Steps to create a release
#  1. Create new directory for release
#  2. Create .lusi_release in that directory
#  3. Copy SConstruct file from base release
#

usage() {
  cat << EOD

Usage: `basename $0` [options] release directory

  Available options:
    -h          this message
    -d          debug (turn on -x shell option)

  Creates directory structure for the software release.

EOD
}


# default values for options

# get the options
while getopts hd c ; do
  case $c in
    h) usage ; exit 0 ;;
    d) set -x ;;
    \?) usage ; exit 2 ;;
  esac
done
shift `expr $OPTIND - 1`

# check arguments
if [ $# -ne 2 ] ; then
  usage
  exit 2
fi

release="$1"
directory="$2"

# check it
if [ -d "$directory" ] ; then
  echo "Directory $directory already exists"
  exit 2
fi

mkdir "$directory"

# if release is linked to anoher one get its real name
if [ -h "$LUSI_ROOT/sw/releases/$release" ] ; then
  # it's symlink, get the real release number
  release=`/bin/ls -dl "$LUSI_ROOT/sw/releases/$release" | awk '{print $NF;}'`
fi

# store its number
echo "$release" > "$directory/.lusi_release"

# copy SConstruct 
if [ -r "$LUSI_ROOT/sw/releases/$release/SConstruct" ] ; then
  cp "$LUSI_ROOT/sw/releases/$release/SConstruct" "$directory"
fi

