            <xtc-config name="ConfigV2" />
            <xtc-config name="ConfigV3" />

            <attribute name="_iShotIdStart" type="uint32_t" accessor="shotIdStart">
            </attribute>

            <attribute name="_fReadoutTime" type="float" accessor="readoutTime">
            </attribute>

