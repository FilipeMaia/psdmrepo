<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE psddl SYSTEM "psddl.dtd">

<psddl>
    <package name="Pds">

        Package providing DDL definitions for some of the pdsdata data 
        types used by DDL data types. This is not a replacement for pdsdata,
        just a description of pdsdata types usable by DDL compiler.

        <tag name="external"/>

        <!-- ========================================================================= -->
    
        <pstype name="ClockTime">
        
            <tag name="no-sizeof"/>
            <tag name="value-type"/>
        
            <attribute name="_low" type="uint32_t" accessor="nanoseconds">
            </attribute>

            <attribute name="_high" type="uint32_t" accessor="seconds">
            </attribute>

            <ctor>
                Default constructor
                <tag name="inline"/>
            </ctor>
            <ctor>
                Constructor which takes values for every attribute
                <tag name="auto"/>
                <tag name="inline"/>
            </ctor>

        </pstype>
        
        <!-- ========================================================================= -->
    
        <pstype name="DetInfo">

            <tag name="no-sizeof"/>
            <tag name="value-type"/>
        
            <attribute name="_log" type="uint32_t" accessor="log">
            </attribute>

            <attribute name="_phy" type="uint32_t" accessor="phy">
            </attribute>

            <ctor>
                Default constructor
                <tag name="inline"/>
            </ctor>
            <ctor>
                Constructor which takes values for every attribute
                <tag name="auto"/>
                <tag name="inline"/>
            </ctor>

        </pstype>
        
        <!-- ========================================================================= -->
    
        <pstype name="SrcAlias">

            <tag name="no-sizeof"/>
            <tag name="value-type"/>
        
            <attribute name="_log" type="uint32_t" accessor="log">
            </attribute>

            <attribute name="_phy" type="uint32_t" accessor="phy">
            </attribute>

            <attribute name="_aliasName" type="char" shape="32" accessor="aliasName" shape_method="None">
            </attribute>

            <ctor>
                Default constructor
                <tag name="inline"/>
            </ctor>
            <ctor>
                Constructor which takes values for every attribute
                <tag name="auto"/>
                <tag name="inline"/>
            </ctor>

        </pstype>
        
                
    </package>
</psddl>
