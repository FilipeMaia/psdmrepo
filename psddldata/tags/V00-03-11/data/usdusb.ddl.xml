<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE psddl SYSTEM "psddl.dtd">

<psddl>
    <package name="UsdUsb">

        Package containing definitions for USDUSB data types.

        <!-- ========================================================================= -->
        
        <pstype name="ConfigV1" version="1" type_id="Id_UsdUsbConfig">
        
            <tag name="config-type"/>
            
            <const name="NCHANNELS" value="4"/>
        
            <enum name="Count_Mode">
                <enum-const name="WRAP_FULL"/>
                <enum-const name="LIMIT"/>
                <enum-const name="HALT"/>
                <enum-const name="WRAP_PRESET"/>
            </enum>
        
            <enum name="Quad_Mode">
                <enum-const name="CLOCK_DIR"/>
                <enum-const name="X1"/>
                <enum-const name="X2"/>
                <enum-const name="X4"/>
            </enum>
        
            <attribute name="_count_mode" type="uint32_t" shape="NCHANNELS" accessor="counting_mode">
            </attribute>

            <attribute name="_quad_mode" type="uint32_t" shape="NCHANNELS" accessor="quadrature_mode">
            </attribute>

        </pstype>
        
        <!-- ========================================================================= -->
        
        <pstype name="DataV1" version="1" type_id="Id_UsdUsbData">
        
            <const name="Encoder_Inputs" value="4"/>
            <const name="Analog_Inputs" value="4"/>
            <const name="Digital_Inputs" value="4"/>
        
            <attribute name="_header" type="uint8_t" shape="6">
            </attribute>

            <attribute name="_din" type="uint8_t" accessor="digital_in">
            </attribute>

            <attribute name="_estop" type="uint8_t">
            </attribute>

            <attribute name="_timestamp" type="uint32_t" accessor="timestamp">
            </attribute>

            <attribute name="_count" type="uint32_t" shape="Encoder_Inputs">
            </attribute>

            <attribute name="_status" type="uint8_t" shape="4">
            </attribute>

            <attribute name="_ain" type="uint16_t" shape="Analog_Inputs">
            </attribute>

            <method name="value" type="int32_t">
                Lower 24 bits of encoder_count as signed integer value.
                <arg name="i" type="uint32_t"/>
                <expr lang="C++" value="int({self}._count[i] &lt;&lt; 8)/256;"/>
            </method>

        </pstype>
        


    </package>
</psddl>
