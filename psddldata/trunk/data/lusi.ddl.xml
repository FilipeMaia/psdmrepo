<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE psddl SYSTEM "psddl.dtd">

<psddl>
    <package name="Lusi">

        This package and namespace gives access to some feature-extracted parameters 
        for IPIMB and YAG.

        <!-- ========================================================================= -->
        
        <pstype name="DiodeFexConfigV1" version="1" type_id="Id_DiodeFexConfig" pack="4">
        
            <tag name="config-type"/>
        
            <tag name="value-type"/>

            <const name="NRANGES" value="3" />
        
            <attribute name="_base" type="float" shape="NRANGES" accessor="base">
            </attribute>

            <attribute name="_scale" type="float" shape="NRANGES" accessor="scale">
            </attribute>


            <ctor>
                Default constructor
                <tag name="inline"/>
            </ctor>
            <ctor>
                Constructor which takes values for every attribute
                <tag name="inline"/>
                <tag name="auto"/>
            </ctor>

        </pstype>
        
        <!-- ========================================================================= -->
        
        <pstype name="DiodeFexConfigV2" version="2" type_id="Id_DiodeFexConfig" pack="4">
        
            <tag name="config-type"/>
        
            <tag name="value-type"/>

            <const name="NRANGES" value="16" />
        
            <attribute name="_base" type="float" shape="NRANGES" accessor="base">
            </attribute>

            <attribute name="_scale" type="float" shape="NRANGES" accessor="scale">
            </attribute>


            <ctor>
                Default constructor
                <tag name="inline"/>
            </ctor>
            <ctor>
                Constructor which takes values for every attribute
                <tag name="inline"/>
                <tag name="auto"/>
            </ctor>

        </pstype>
        
        <!-- ========================================================================= -->
        
        <pstype name="DiodeFexV1" version="1" type_id="Id_DiodeFex" pack="4">
        
            <tag name="value-type"/>

            <attribute name="_value" type="float" accessor="value">
            </attribute>


            <ctor>
                Default constructor
                <tag name="inline"/>
            </ctor>
            <ctor>
                Constructor which takes values for every attribute
                <tag name="inline"/>
                <tag name="auto"/>
            </ctor>

        </pstype>
        
        <!-- ========================================================================= -->
        

        <pstype name="IpmFexConfigV1" version="1" type_id="Id_IpmFexConfig" pack="4">
        
            <tag name="config-type"/>
        
            <const name="NCHANNELS" value="4" />
        
            <attribute name="_diode" type="DiodeFexConfigV1" shape="NCHANNELS" accessor="diode">
            </attribute>

            <attribute name="_xscale" type="float" accessor="xscale">
            </attribute>

            <attribute name="_yscale" type="float" accessor="yscale">
            </attribute>

        </pstype>
        
        
        <!-- ========================================================================= -->
        

        <pstype name="IpmFexConfigV2" version="2" type_id="Id_IpmFexConfig" pack="4">
        
            <tag name="config-type"/>
        
            <const name="NCHANNELS" value="4" />
        
            <attribute name="_diode" type="DiodeFexConfigV2" shape="NCHANNELS" accessor="diode">
            </attribute>

            <attribute name="_xscale" type="float" accessor="xscale">
            </attribute>

            <attribute name="_yscale" type="float" accessor="yscale">
            </attribute>

        </pstype>
        
        
        <!-- ========================================================================= -->
        

        <pstype name="IpmFexV1" version="1" type_id="Id_IpmFex" pack="4">
        
            <tag name="value-type"/>

            <const name="NCHANNELS" value="4" />
        
            <attribute name="_channel" type="float" shape="NCHANNELS" accessor="channel">
            </attribute>

            <attribute name="_sum" type="float" accessor="sum">
            </attribute>

            <attribute name="_xpos" type="float" accessor="xpos">
            </attribute>

            <attribute name="_ypos" type="float" accessor="ypos">
            </attribute>


            <ctor>
                Default constructor
                <tag name="inline"/>
            </ctor>
            <ctor>
                Constructor which takes values for every attribute
                <tag name="inline"/>
                <tag name="auto"/>
            </ctor>

        </pstype>
        
        
        <!-- ========================================================================= -->
        

        <pstype name="PimImageConfigV1" version="1" type_id="Id_PimImageConfig" pack="4">
        
            <tag name="config-type"/>
        
            <tag name="value-type"/>

            <attribute name="_xscale" type="float" accessor="xscale">
            </attribute>

            <attribute name="_yscale" type="float" accessor="yscale">
            </attribute>


            <ctor>
                Default constructor
                <tag name="inline"/>
            </ctor>
            <ctor>
                Constructor which takes values for every attribute
                <tag name="inline"/>
                <tag name="auto"/>
            </ctor>

        </pstype>
        
        
        
    </package>
</psddl>
