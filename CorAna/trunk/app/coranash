#------------------------------
__version__ = "$Revision: 8 $"
# $Source$

#--------------------------------
#  Imports of standard modules --
#--------------------------------
import sys
import os

#-----------------------------
# Imports for other modules --
#-----------------------------
from PyQt4 import QtGui
from CorAna.GUIMain import GUIMain

#---------------------------------
#  Application class definition --
#---------------------------------

class AnalysisShell :

    def __init__ ( self ) :
        """Constructor : This is a regular stuff for PyQt4"""

        self.input_parameters()

	print "Start the main GUI"
        app = QtGui.QApplication(sys.argv)
        gui = GUIMain(None,app)
        gui.show()
        ##app.setActiveWindow(gui)
        sys.exit(app.exec_())

    def input_parameters(self):	
        msg = """CorAnaShell:
         To run this application use command "coranash" without parameters or with a single parameter - the configuration file name. 
         All necessary parameters will be set through the GUIs of this application. 
         By default all configuration parameters are taken from the file "evtdispconfig". 
         If this file is missing, the default values of parameters will be used at start, 
         untill the "evtdispconfig" is not created.
        """
	if len(sys.argv) > 2 : 
            sys.exit(90*'-' + '\n' + msg + '\n' + 90*'-')
	

#---------------------------------
#
# run application when launched as a main module
#

if __name__ == "__main__" :

    app = AnalysisShell()
    #sys.exit(app.exec_())
    sys.exit('End of application AnalysisShell')

#---------------------------------
